{
  "compilerOptions":
  {
    "types": [
      "node",
      "express",
      "cors",
      "morgan"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}
